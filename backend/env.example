# Configurações da aplicação
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/security_cam

# MongoDB
MONGODB_URL=mongodb://localhost:27017/security_cam

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# MinIO (Object Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=security-cam

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000

# AI Engine
AI_ENGINE_URL=http://localhost:8001

# Configurações de vídeo
VIDEO_STREAM_URL=rtsp://admin:password@192.168.1.100:554/stream
VIDEO_FRAME_RATE=30
VIDEO_RESOLUTION=1920x1080

# Configurações de detecção
DETECTION_CONFIDENCE_THRESHOLD=0.7
ANOMALY_THRESHOLD=0.5

# Configurações de armazenamento
MAX_VIDEO_RETENTION_DAYS=30
MAX_IMAGE_RETENTION_DAYS=90

# Configurações de notificação
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# WebSocket
WS_HEARTBEAT_INTERVAL=30
